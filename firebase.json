{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(html|htm)",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' https://cdnjs.cloudflare.com;"
          }
        ]
      }
    ],    
    "rewrites": [
      {
        "source": "/privacy-policy",
        "destination": "/privacy-policy.html"
      },
      {
        "source": "/terms-of-service",
        "destination": "/terms-of-service.html"
      },
      {
        "source": "/sitemap",
        "destination": "/sitemap.xml"
      },
      {
        "source": "/tech-skills",
        "destination": "/resources/tech-skills/index.html"
      },
      
      {
        "source": "**",
        "destination": "/index.html"
      }

    ],
    "redirects": [
      {
        "source": "/500",
        "destination": "/error.html?code=500",
        "type": 302
      },
      {
        "source": "/404",
        "destination": "/error.html?code=404",
        "type": 301
      }
    ],
    "functions": {
      "rewriteHTTPSNonWWWtoWWW": {
        "condition": {
          "isSecure": true,
          "notStartsWith": "www"
        }
      }
    }
  }
}